<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Services">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/blue">

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:background="@drawable/profile"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@color/blue">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Hi Jessamine!"/>

            <TextView
                android:id="@+id/tvEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:background="@drawable/logout"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Dirt B Gone!"
        android:fontFamily="@font/nunito"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/black" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollIndicators="bottom"
        android:fadeScrollbars="false"
        android:scrollbarThumbHorizontal="@color/blue"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/logo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OVERVIEW OF THE COMPANY\nDirt B Gone Cleaning Services aims \nto provide professional and \npersonalized cleaning services for its \nclients to guarantee satisfaction.
                    "
                android:textColor="@color/black"
                android:padding="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OVERVIEW OF THE BUSINESS SERVICES:
                        \n-Residential Cleaning
                        \n-Commercial Cleaning
                        \n-Post Construction Clearning
                        \n-Green Cleaning Services
                        \n-Sanitation and Disinfection"
                android:textColor="@color/blue"/>

        </LinearLayout>

    </HorizontalScrollView>






    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollIndicators="left"
        android:fadeScrollbars="false"

        android:scrollbarAlwaysDrawVerticalTrack="@color/blue">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dblue"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito"
                android:text="WHAT CAN WE DO FOR YOU?"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnResidential"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/container"
                    android:orientation="vertical"
                    android:text="RESIDENTIAL CLEANING"
                    android:textColor="@color/blue"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCommercial"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:text="COMMERCIAL CLEANING"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:background="@drawable/container"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnConstruction"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:text="POST CONSTRUCTION CLEANING"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:background="@drawable/container"/>

                <Button
                    android:id="@+id/btnGreen"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:text="GREEN CLEARNING SERVICES"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:background="@drawable/container"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSanitation"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:text="SANITATION AND DISINFECTION SERVICES"
                    android:textColor="@color/blue"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/container"/>
                <Button
                    android:id="@+id/btnUpholstery"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:text="Upholstery"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:background="@drawable/container"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>